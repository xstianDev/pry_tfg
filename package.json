{
  "name": "pry_tfg",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint src --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint --fix src",
    "build": "bun run build:client && bun run build:server && bun run build:socket",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --outDir dist/server --ssr src/server/https.ts",
    "build:socket": "vite build --outDir dist/socket --ssr src/server/socket.ts",
    "build:ssr": "bun run build:server && bun run ssr",
    "build:wss": "bun run build:socket && bun run wss",
    "ssr": "node dist/server/https.js",
    "wss": "node dist/socket/socket.js"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.1",
    "nodemailer": "^6.9.13",
    "password-validator": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.16",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-unused-imports": "^4.0.0",
    "typescript": "5.4.5",
    "typescript-eslint": "^7.11.0",
    "vite": "5.2.10"
  },
  "types": "./src/types/index.d.ts",
  "alias": {
    "~@/*": "./src",
    "~@css/*": "./src/styles",
    "~@img/*": "./public/img",
    "~@svg/*": "./public/svg",
    "~@js/*": "./public/js"
  }
}
